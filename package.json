{
  "name": "@eonova/v3-directives",
  "version": "1.0.9",
  "packageManager": "pnpm@10.26.2",
  "description": "Custom Vue3 directives",
  "author": "eonova <hi@eonova.me> (https://github.com/eonova)",
  "license": "MIT",
  "homepage": "https://github.com/eonova/v3-directives",
  "bugs": {
    "url": "https://github.com/eonova/v3-directives/issues"
  },
  "keywords": [
    "v3",
    "directives",
    "vue3"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch & eslint-flat-config-viewer",
    "build": "tsup",
    "start": "esno src/index.ts",
    "lint": "oxlint src/directive/**/*.ts",
    "lint:fix": "oxlint src/**/*.*  --fix",
    "lint:ui": "eslint --inspect-config",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bumpp --commit --push --tag && npm publish",
    "up": "taze major -I"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@types/node": "^25.0.3",
    "bumpp": "^10.3.2",
    "esno": "^4.8.0",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.35.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.26",
    "vitepress": "1.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "oxlint --fix"
  }
}
